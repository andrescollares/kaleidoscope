extra-source-files: CHANGELOG.md

common common-options
    build-depends:
        , base          ^>=4.14
        , llvm-hs-pure  ^>=12.0

    ghc-options:
        /usr/lib/io.so --make -Wall -Wcompat -Widentities -Wincomplete-uni-patterns
        -Wincomplete-record-updates -Wredundant-constraints
        -Wnoncanonical-monad-instances -threaded -lstdc++ -dynamic

    if impl(ghc >=8.2)
        ghc-options: -fhide-source-paths

    if impl(ghc >=8.4)
        ghc-options: -Wpartial-fields

    if impl(ghc >=8.8)
        ghc-options: -Wmissing-deriving-strategies -fwrite-ide-info -hiedir=.hie

    if impl(ghc >=8.10)
        ghc-options: -Wunused-packages

    default-language: Haskell2010

executable kaleidoscope-fing
    import: common-options
    main-is: Main.hs
    other-modules: Codegen, Lexer, ParserH, Syntax, Emit, JIT
    hs-source-dirs: src
    build-depends:
        , bytestring  >=0.10
        , llvm-hs     ^>=12.0
        , containers    >=0.6
        , mtl >=2.2 && <2.3
        , text ^>= 1.2
        , haskeline >=0.7
        , parsec >=3.1.0

